{
  "name": "sebsept/ps_dev_base",
  "description": "Tools for quality Prestashop Module development.",
  "minimum-stability": "stable",
  "license": "AFL-3.0",
  "authors": [
    {
      "name": "SÃ©bastien Monterisi",
      "email": "contact@seb7.fr"
    }
  ],
  "autoload": {
    "psr-4": {
      "SebSept\\PsDevToolsPlugin\\": "src/"
    }
  },
  "require": {
    "composer-plugin-api": "^2.0",
    "php": ">=7.2.5",
    "ext-json": "*",
    "phpstan/phpstan": "^0.12.83"
  },
  "require-dev": {
    "composer/composer": "^2.0"
  },
  "config": {
    "preferred-install": "dist",
    "platform": {
      "php": "7.2.5"
    }
  },
  "scripts": {
    "post-install-cmd": "phive install",
    "post-update-cmd": "phive update",
    "php-cs-fixer": [
      "tools/php-cs-fixer fix"
    ],
    "phpstan": [
      "tools/phpstan analyse"
    ],
    "fix": "@php-cs-fixer",
    "pre-commit": [
      "tools/php-cs-fixer fix --dry-run --ansi",
      "@phpstan --ansi",
      "composer validate"
    ]
  },
  "type": "composer-plugin",
  "extra": {
    "class": "SebSept\\PsDevToolsPlugin\\Composer\\PsDevToolsPlugin"
  },
  "provide": {
    "prestashop/autoindex": "^1.0"
  },
  "suggest": {}
}
