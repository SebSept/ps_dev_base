{
  "name": "sebsept/ps_dev_base",
  "description": "Tools for quality Prestashop Module development.",
  "minimum-stability": "stable",
  "license": "AFL-3.0",
  "authors": [
    {
      "name": "SÃ©bastien Monterisi",
      "email": "contact@seb7.fr"
    }
  ],
  "autoload": {
    "psr-4": {
      "SebSept\\PsDevToolsPlugin\\": "src/"
    }
  },
  "require": {
    "composer-plugin-api": "^2.0",
    "php": ">=7.2.0",
    "ext-json": "*",
    "phpstan/phpstan": "^0.12.83"
  },
  "require-dev": {
    "composer/composer": "^2.0",
    "friendsofphp/php-cs-fixer": "^2.18"
  },
  "config": {
    "preferred-install": "dist",
    "platform": {
      "php": "7.2"
    }
  },
  "scripts": {
    "php-cs-fixer": [
      "vendor/bin/php-cs-fixer fix"
    ],
    "phpstan": [
      "vendor/bin/phpstan analyse"
    ],
    "fix": "@php-cs-fixer",
    "pre-commit": [
      "vendor/bin/php-cs-fixer fix --dry-run --ansi",
      "@phpstan --ansi"
    ]
  },
  "type": "composer-plugin",
  "extra": {
    "class": "SebSept\\PsDevToolsPlugin\\Composer\\PsDevToolsPlugin"
  }
}
